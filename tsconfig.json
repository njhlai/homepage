{
    "compilerOptions": {
        "outDir": "js",
        "target": "es6",
        "allowJs": false,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "removeComments": true,
        "isolatedModules": true
    },
    "include": ["ts/**/*.ts"]
}
